if [[ -d ${ZSH:-$HOME/.oh-my-zsh}/custom/aliases ]]; then
  setopt nullglob
  for alias_file in ${ZSH:-$HOME/.oh-my-zsh}/custom/aliases/*_aliases.zsh; do
    if [[ -r "$alias_file" ]]; then
      source "$alias_file"
    fi
  done
  unsetopt nullglob
fi
