color_echo() {
  local color=$1
  local message=$2
  case "$color" in
    red)    color_code="31";;
    green)  color_code="32";;
    yellow) color_code="33";;
    blue)   color_code="34";;
    magenta)color_code="35";;
    cyan)   color_code="36";;
    *)      color_code="39";;
  esac
  echo -e "\e[${color_code}m${message}\e[0m"
}

detect_best_url() {
  local timeout=3
  local urls=("$@")

  for url in "${urls[@]}"; do
    if curl -s --connect-timeout "$timeout" "$url" >/dev/null 2>&1; then
      echo "$url"
      return
    fi
  done
  echo "No working URL found"
}

local zshrc_remote_url="https://raw.githubusercontent.com/funnyzak/dotfiles/refs/heads/main/"
local zshrc_remote_url_cn="https://raw.gitcode.com/funnyzak/dotfiles/raw/main/"
local custom_functions_path="${ZSH:-$HOME/.oh-my-zsh}/custom/custom_functions.zsh"
local functions_url=$(detect_best_url "$zshrc_remote_url" "$zshrc_remote_url_cn")

load_custom_functions() {
  if [ -f "$custom_functions_path" ]; then
    source "$custom_functions_path"
  else
    color_echo yellow "Custom functions file not found at: $custom_functions_path"
    download_custom_functions
  fi
}

download_custom_functions() {
  color_echo yellow "Downloading custom functions from: $functions_url"
  if command -v curl >/dev/null 2>&1; then
    curl -sSL -o "$custom_functions_path" "$functions_url"
    if [[ $? -eq 0 ]]; then
      color_echo green "Custom functions downloaded successfully to: $custom_functions_path"
      source "$custom_functions_path"
    else
      color_echo red "Error downloading custom functions using curl."
      color_echo red "Please check the URL and your network connection."
    fi
  elif command -v wget >/dev/null 2>&1; then # Fallback to wget if curl is not available
    wget -q -O "$custom_functions_path" "$functions_url"
    if [[ $? -eq 0 ]]; then
      color_echo green "Custom functions downloaded successfully to: $custom_functions_path"
      source "$custom_functions_path"
    else
      color_echo red "Error downloading custom functions using wget."
      color_echo red "Please check the URL and your network connection."
    fi
  else
    color_echo red "Error: Neither curl nor wget is available to download functions."
    color_echo red "Please install curl or wget and try again, or manually create $custom_functions_path."
  fi
}

alias upgrade_custom_functions='(){
  download_custom_functions && color_echo green "Custom functions updated and reloaded."
}'

load_custom_functions

